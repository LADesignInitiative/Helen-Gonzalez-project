---
const {
  pageTitle,
  customDescription,
  OGImage,
  canonicalUrl,
  ToBeIndexed = true,
  withCTA = false,
} = Astro.props;
import NavBar from "@/components/navigation/standard/index.astro";
import BaseLayout from "./BaseLayout.astro";
import ScrollTopButton from "@/components/buttons/ScrollTopButton/index.astro";
---

<BaseLayout
  {pageTitle}
  {customDescription}
  {OGImage}
  {canonicalUrl}
  {ToBeIndexed}
  {withCTA}
>
  <NavBar interactive={false} />
  <div
    class="mt-[50px] sm:mt-[75px] lg:mt-[100px] flex-1 min-h-[100px] relative"
  >
    <slot />
    <ScrollTopButton />
  </div>
</BaseLayout>
