---
import ImageItem from "./imageItem.astro";
import "./scroll_g_style.css";
const {
  title,
  content,
  image1,
  img1Url = "/",
  img1Content = "Sample text",
  image2,
  img2Url = "/",
  img2Content = "Sample text",
  image3,
  img3Url = "/",
  img3Content = "Sample text",
  altText = "gallery image",
} = Astro.props;
let imgArray = [image1, image2, image3];
---

<div
  id="SG_gallery"
  class="relative min-h-[100vh] flex flex-col overflow-hidden"
>
  <div
    id="SG_BG_parent"
    class="absolute left-0 right-0 bottom-0 z-[-1] h-[60%] w-full min-h-[300px] flex flex-col"
  >
    <div
      id="SG-animated-BG"
      class="bg-primaryC w-full duration-1000 transition-all h-[90%] mt-auto mb-0 max-h-[500px] translate-y-[500px]"
    >
    </div>
  </div>
  <div class="mx-auto w-10/12 mt-auto mb-0 flex flex-col h-full relative">
    <div
      id="SGText"
      class="flex flex-col ml-0 mr-auto !mt-0 font-primaryF min-h-[100px] min-w-[100px] w-full relative"
    >
      <div class="mt-0" id="SGh3">
        <div class="md:translate-y-[-400px] transition-all duration-500">
          <h3 class="text-3xl font-primaryF">
            {title}
          </h3>
        </div>
      </div>
      <div id="SGp">
        <p
          class="md:translate-y-[-400px] transition-all duration-500 delay-[200ms] mt-0 mb-auto font-primaryF"
        >
          {content}
        </p>
      </div>
    </div>
    <div
      id="animated-gallery"
      class="h-full grid md:grid-cols-3 gap-[30px] md:gap-x-[10px] md:gap-y-[0px] mt-auto mb-0 flex-end"
    >
      <div
        class={`w-full relative SGImgCont overflow-hidden group`}
        id="SGImage_1"
      >
        <img
          src={image1.src}
          alt={altText}
          class={`absolute object-cover w-full aspect-[1/3] duration-500 translate-y-[520px] transition-all SGImage_1`}
        />
        <div
          id="mask1"
          class="h-full w-full absolute inset-0 z-10 bg-[rgba(0,0,0,0.4)] md:opacity-0 group-hover:opacity-100 transition-all duration-500"
        >
          <div class="p-10">
            <a
              href={img1Url}
              class="cursor-pointer text-white hover:text-primaryC"
            >
              <p class="text-2xl">
                {img1Content}
              </p>
              <p class="underline">Explore</p>
            </a>
          </div>
        </div>
      </div>
      <div
        class={`w-full relative SGImgCont overflow-hidden group`}
        id="SGImage_2"
      >
        <img
          src={image2.src}
          alt={altText}
          class={`absolute object-cover w-full aspect-[1/3] duration-500 translate-y-[520px] transition-all md:delay-[200ms] SGImage_2`}
        />
        <div
          id="mask2"
          class="h-full w-full absolute inset-0 z-10 bg-[rgba(0,0,0,0.4)] md:opacity-0 group-hover:opacity-100 transition-all duration-500"
        >
          <div class="p-10">
            <a
              href={img2Url}
              class="cursor-pointer text-white hover:text-primaryC"
            >
              <p class="text-2xl">
                {img2Content}
              </p>
              <p class="underline">Explore</p>
            </a>
          </div>
        </div>
      </div>
      <div
        class={`w-full relative SGImgCont overflow-hidden group`}
        id="SGImage_3"
      >
        <img
          src={image3.src}
          alt={altText}
          class={`absolute object-cover w-full aspect-[1/3] duration-500 translate-y-[520px] transition-all md:delay-[400ms] SGImage_3`}
        />
        <div
          id="mask3"
          class="h-full w-full absolute inset-0 z-10 bg-[rgba(0,0,0,0.4)] md:opacity-0 group-hover:opacity-100 transition-all duration-500"
        >
          <div class="p-10">
            <a
              href={img3Url}
              class="cursor-pointer text-white hover:text-primaryC"
            >
              <p class="text-2xl">
                {img3Content}
              </p>
              <p class="underline">Explore</p>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
