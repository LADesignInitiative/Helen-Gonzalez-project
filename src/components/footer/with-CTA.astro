---
//This is the footer of the website without a blog.
import CreatorComponent from "../creatorComponent.astro";
import { BusinessInfo } from "@/data/business-info.js";
import "./footer_style.css";
import type { PostType, PostAssetType } from "@/util/interface.tsx";
import Contacts from "./contacts.astro";
import ColumnLabel from "./column_label.astro";
import SocialMedia from "../socialMedia/social-links.astro";
/* code for blog */
import LogoComponentLazy from "../logoComponent-lazy.astro";
import SiteLinkColumn from "./site-link-column.astro";
import HoursInfo from "./hours-info.astro";
import ForestImg from "@/assets/images/forest-silhouette2-green2.webp";
var assets: Array<PostAssetType> = [];
var allPosts: Array<PostType> = [];
var YEAR = new Date().getFullYear();
---

<div
  class="relative translate-y-[5px] mt-[200px] sm:mt-[75px] w-full py-[200px] md:py-[240px] !bg-fixed bg-center bg-no-repeat bg-cover text-white before:content-[''] before:w-full before:h-full before:bg-black before:opacity-30 before:absolute before:inset-0 bg-[url('/assets/images/slide-646.webp')] sm:bg-[url('/assets/images/slide-1024.webp')] lg:bg-[url('/assets/images/slide-1920.webp')] overflow-visible"
>
  <div class="px-5 md:px-20">
    <div
      class="relative flex flex-col gap-1 sm:flex-row clearfix justify-between"
    >
      <div class="text-center sm:text-left">
        <span class="text-2xl">Have an idea for a project?</span>
        <h2 class="text-3xl md:text-6xl">Get in touch with us</h2>
      </div>

      <a
        href="/contact"
        class="cursor-pointer block mx-auto md:ml-auto md:mr-0 !z-[20]"
      >
        <div
          class="bg-secondaryC rounded-lg px-5 py-5 hover:bg-slate-700 hover:text-white float-right mt-[50px] sm:whitespace-nowrap"
        >
          Make an appointment<i class="far fa-long-arrow-right"></i>
        </div></a
      >
    </div>
  </div>

  <svg
    id="wave"
    style="transform:rotate(0deg); transition: 0.3s"
    viewBox="0 0 1440 490"
    version="1.1"
    class="absolute bottom-[-60px] md:bottom-[-100px] lg:bottom-[-205px] left-0 right-0 z-[10]"
    xmlns="http://www.w3.org/2000/svg"
