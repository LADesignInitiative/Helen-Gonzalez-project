        ><stop stop-color="rgba(22, 29, 39, 1)" offset="0%"></stop><stop
          stop-color="rgba(22, 29, 39, 1)"
          offset="100%"></stop></linearGradient
      ></defs
    ><path
      class="absolute bottom-0 left-0 right-0 z-0 w-full h-full"
      style="transform:translate(0, 0px); opacity:1"
