---
import TagListItem from './tagListItem.astro'; 
import { makeURLfriendly  } from "@/hooks/string_hooks.tsx"; 
const {tags} = Astro.props; 
---
<ul class = "flex flex-row flex-wrap [&>li]:mr-1">
    {
    tags.map((item: {tag: string}) => <TagListItem url = {`../tags/${makeURLfriendly(item.tag)}/1`} tag ={item.tag} /> )
    }
</ul>


