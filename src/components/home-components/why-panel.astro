---
const { image, label } = Astro.props;
---

<div
  class="flex flex-col md:flex-row rounded-lg bg-white shadow-[rgba(100,100,111,0.2)_0px_7px_29px_0px] p-5 mb-5 md:mb-0 floatUpTag floatUp"
>
  <div class="min-w-[40%]">
    <h3 class="text-center font-bold mb-5 uppercase text-xl lg:text-3xl">
      {label}
    </h3>
    <img
      src={image.src}
      loading="lazy"
      decoding="async"
      alt={label}
      class="w-[150px] aspect-square m-auto"
    />
  </div>
  <div class="my-auto">
    <slot />
  </div>
</div>
