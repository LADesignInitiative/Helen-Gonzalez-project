---
import { BusinessInfo } from "@/data/business-info";
import { formatPhone } from "@/hooks/number";
---

<section class="mt-10 w-full text-center">
  <h2 class="font-bold text-2xl">
    Are you interested in installing artificial turf in your outdoor space?
  </h2>
  <p class="font-bold">Call or Text Helen</p>
  <p>{formatPhone(BusinessInfo.phone)}</p>
  <div class="flex flex-row w-fit mx-auto my-10">
    <hr class="border-[2xp] w-[100px] my-auto border-slate-300 mx-5" />
    <p>Or</p>
    <hr class="border-[2xp] w-[100px] my-auto border-slate-300 mx-5" />
  </div>
  <div>
    <a href="/contact">
      <button
        type="button"
        class="rounded-full bg-primaryC px-4 py-2.5 text-sm font-semibold text-white shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-primaryHoverC my-5 active:translate-x-[1px] active:translate-y-[1px]"
        >Send us a message</button
      ></a
    >
  </div>
</section>
