---

const { 
    defaultImg, 
    phoneImg, 
    mediumTabImg, 
    tabletImg, 
    altText = "image", 
    customStyle,
} = Astro.props; 
---
<picture>
    <!-- Mobile Image -->
    {phoneImg && <source media="(max-width: 600px)" srcset={phoneImg}>}
    <!-- Medium Tablet Image-->
    {mediumTabImg && <source media="(min-width: 601px)" srcset={mediumTabImg}>}
    <!-- Tablet Image-->
    {tabletImg && <source media="(min-width: 1080px)" srcset={tabletImg}>}
    <!-- Desktop Image-->
    {defaultImg && <source media="(min-width: 1200px)" srcset={defaultImg}>}
    <!-- Fallback Image -->
    <img aria-hidden="true" 
    loading="lazy"
    decoding="async" 
    src={defaultImg} 
    alt={altText} 
    width="1920" 
    height="1280"
    class = {customStyle}
    >
</picture>